<section id="blogPost" class="blogPost">
    <main>
      <section>
        <h3>{{blogPost.title}}</h3>
        <h6>Posted by {{blogPost.user.username}} on {{dateFormat blogPost.createdAt}}</h6>
      </section>
      <section>
        <p>{{blogPost.content}}</p>
      </section>
    </main>
    {{#ifCond blogPost.user.username '==' loginUser.username}}
      <button id="editBtn" onclick="getEditBlogPost('{{blogPost.id}}')">
          <img src="/images/pencil_icon.png" align="center" width="20px" height="20px" alt="edit icon">
      </button>
      <button id="deleteBtn" onclick="deleteBlogPost('{{blogPost.id}}')">
          <img src="/images/bin_icon.png" align="center" width="15px" height="22px" alt="delete icon">
      </button>
    {{/ifCond}}
</section>
<section>
  {{#each blogPost.comments as |comment|}}
  <main>
    <section>
      <p>{{comment.content}}</p>
    </section>
    <section>
      -{{comment.user.username}}, {{dateFormat comment.created_at}}
    </section>
  </main>
  {{/each}}
</section>
<div class="card">
    <h3 class="card-header"></h3>
    <form class="card-body comment-form" id="comment-form">

        <label class="form-label">Comment</label>
        <input id="comment" name="comment-body" class="form-input"/>

        <button class="btn">Post Comment</button>
    </form>
</div>
<script src="../js/blogpost.js"></script>
