<section id="blogPosts" class="blogPosts">
  {{#each blogPosts as |blogPost|}}
    <a href="/blogpost/{{blogPost.id}}">
      <section>
        <h3>{{blogPost.title}}</h3>
        <h6>Posted by {{blogPost.user.username}} on {{blogPost.date}}</h6>
      </section>
      <section>
        <p>{{blogPost.content}}</p>
      </section>
    </a>
  {{/each}}
</section>
